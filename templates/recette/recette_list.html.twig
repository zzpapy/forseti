{% extends 'base.html.twig' %}

{% block title %}Hello recetteController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default card-view">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h6 class="panel-title txt-dark">Attribution des recettes</h6>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-wrapper collapse in">
                    <div class="panel-body">
                        <div class="table-wrap mt-40">
                            <div class="table-responsive">
                                <table id="edit_datable_recette_list" class="table table-hover display mb-30">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Label</th>
                                            <th>Montant</th>
                                            <th>Associé</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for recette in recettes %}
                                        <tr id="row-{{ recette.id }}">
                                            <td> {{recette.createdAt|date}} </td>
                                            <td> {{recette.label}} </td>
                                            <td> {{recette.total}} </td>
                                            {% if recette.user %}
                                                <td>{{recette.user.firstName}}</td>
                                            {% else %}
                                                <td>Non attribuée</td>                                                
                                            {% endif %}                                   
                                            <td>
                                                <a class="link" href="{{ path('app_recette_update',{ id : recette.id }) }}"><i class="ti-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_specifique %}
    {{ encore_entry_script_tags('grandin_select_picker') }}
    {{ encore_entry_script_tags('grandin_editable_table_data') }}
{% endblock %}