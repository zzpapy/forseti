{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block page_title %}Réinitialiser votre mot de passe{% endblock %}
{% block page_breadcrumbs %}<li class="active">Récupération de mot de passe</li>{% endblock %}
{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    {{ form_start(resetForm) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(resetForm.plainPassword) }}
                        </div>
                    </div>
                    <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}