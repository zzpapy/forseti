{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Tableau de bord</h1>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary card-view">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h6 class="panel-title txt-light">Liste des transactions</h6>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-wrapper collapse in">
                    <div class="panel-body">
                        <div class="treeview" id="treeview_account"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts_specifique %}
    {# Bootstrap treeview #}
    {{ encore_entry_script_tags('grandin_bootstrap_treeview') }}
    <script type="application/javascript">

        $(document).ready(function($){
            "use strict";
            var transactionJson = $.parseJSON(JSON.stringify({{ listTransactions | raw }}));

            $('#treeview_account').treeview({
                levels: 2,
                data: transactionJson
            });
        });

    </script>
{% endblock %}

