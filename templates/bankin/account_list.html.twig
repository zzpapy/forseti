{% extends 'base.html.twig' %}

{% block title %}Hello TestApiController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default card-view">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h6 class="panel-title txt-dark">Liste des comptes</h6>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-wrapper collapse in">
                    <div class="panel-body">
                        <div class="treeview" id="treeview_account"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_specifique %}
    {# Bootstrap treeview #}
    {{ encore_entry_script_tags('grandin_bootstrap_treeview') }}
    <script type="application/javascript">

        $(document).ready(function($){
            "use strict";
            var accountJson = $.parseJSON(JSON.stringify({{ account_list | raw }}));

            $('#treeview_account').treeview({
                enableLinks: true,
                data: accountJson
            });
        });

    </script>
{% endblock %}
